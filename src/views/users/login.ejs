<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
    <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/login.css">
    <title>Login</title>
</head>

<body>
    <%- include('../partials/header.ejs') %>
              <main class="login-main">
            <section>
                <div class="login-box">
                    <h2>Logueate y elegi tu remera favorita.</h2>
                    <% if(locals.errors && errors.email) { %>
                       <p><%= errors.email.msg %></p>
                    <% } %>
                    <% if(locals.errors && errors.password) { %>
                        <p><%= errors.password.msg %></p>
                    <% } %>
                    <form action="/users/login" method="POST" class="login-form" id="login-form">
                        
                        <input type="email" name="email" class="email" required placeholder="Ingrese su email">
                        <input type="password" name="password" required placeholder="Ingrese su contraseña">
                        
                        <button class="button-login" type="submit">Ingresar</button>
                      <label for="">Recordame</label>
                        <input type="checkbox" name="remember_user" id="">
                    </form>
                    <a href="/users/register"><button class="button-create-account" type="#">Creá una cuenta</button></a>
                </div>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
        <script src="/script/valLogin.js"></script>
       
</body>

</html>