<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Rajdhani&display=swap" rel="stylesheet">
    <link href="https://cdn.lineicons.com/2.0/LineIcons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/login.css">
    <title>Login</title>
</head>

<body>
    <%- include('../partials/header.ejs') %>
              <main class="login-main">
            <section>
                <div class="login-box">
                    <h2>Logueate y elegi tu remera favorita.</h2>
                    <% if(locals.errors) { %>
                        <% for (let i = 0; i < errors.length) { %>
                            <p><%= errors.[i].msg %></p>
                        <% } %>
                    <% } %>
                    <form action="/users/login" method="POST">
                        <input type="text" name="user" placeholder="Ingrese usuario">
                        <input type="password" name="password" placeholder="Ingrese su contraseña">
                        <button class="button-login" type="submit">Ingresar</button>
                        <button class="button-create-account" type="#">Creá una cuenta</button>
                    </form>

                </div>
            </section>
        </main>
        <%- include('../partials/footer.ejs') %>
</body>

</html>